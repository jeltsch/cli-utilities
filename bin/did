#! /usr/bin/env sh


# General setup

set -e

IFS='
'


# Argument processing

if [ $# -ne 2 ]
then
    echo 'Do in directories'
    echo 'Usage: did ⟨directory-list⟩ ⟨command-string⟩'
    exit 1
fi >&2


# Data acquisition

dirs=$(grep -e '^[^#]' "$HOME/.config/did/$1" || true)
relative_dirs=$(echo "$dirs" | { grep -e '^[^/]' || true; })

if [ -n "$relative_dirs" ]
then
    echo 'Directory paths must be absolute'
    echo 'Offending paths:'
    echo "$relative_dirs" | sed -e 's/^/    /'
    exit 1
fi >&2


# Execution

for dir in $dirs
do
    cd "$dir"
    "$SHELL" -c "$2"
done
