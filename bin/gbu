#! /usr/bin/env sh


# General setup

set -e


# Argument processing

if [ $# -ne 1 ]
then
    echo 'Get branch updates'
    echo 'Usage: gbu ⟨other-branch⟩'
    exit 1
fi >&2


# Data acquisition

branch=$(git symbolic-ref --short HEAD)


# Execution

git merge --no-ff --message="Merge \`$1\` into \`$branch\`" "$1"
