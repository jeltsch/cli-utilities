#! /usr/bin/env sh


# General setup

set -e


# Argument processing

if [ $# -ne 0 ]
then
    echo 'Merge pull request'
    echo 'Usage: mpr'
    exit 1
fi >&2


# Data acquisition

main_json=$(gh repo view --json defaultBranchRef)
main=$(
    echo "$main_json" |
    sed -ne 's/^{"defaultBranchRef":{"name":"\(.[^"]*\)"}}$/\1/p'
)
branch=$(git symbolic-ref --short HEAD)
pr_data=$(gh pr view)
number=$(
    printf '%s\n' "$pr_data" |
    sed -ne '
        /^number:	\([[:digit:]]\{1,\}\)$/ {
            s/.*:	//p
            q
        }
        /^--$/ q
    '
)
title=$(
    printf '%s\n' "$pr_data" |
    sed -ne '
        /^title:	/ {
            s/.*:	//p
            q
        }
        /^--$/ q
    '
)
subject="Merge \`$branch\` of pull request #$number into \`$main\`"


# Execution

git checkout "$main"
git merge --no-ff --message="$subject" --message="$title" "$branch"
git push
git branch --delete --remotes "github/$branch"
git branch --delete "$branch"
