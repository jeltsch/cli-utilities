#! /usr/bin/env sh


# General setup

set -e


# Argument processing

if [ $# -ne 1 ]
then
    echo 'Create commit for issue'
    echo 'Usage: cci ⟨issue⟩'
    exit 1
fi >&2


# Data acquisition

issue_data=$(gh issue view "$1")
title=$(
    printf '%s\n' "$issue_data" |
    sed -ne '
        /^title:	/ {
            s/.*:	//p
            q
        }
        /^--$/ q
    '
)


# Execution

git commit --message="$title"
